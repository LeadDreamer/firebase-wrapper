{
  "name": "@leaddreamer/firebase-wrapper",
  "engines": {
    "node": "14"
  },
  "version": "1.0.64",
  "description": "A set of helper-wrapper functions around firebase firestore.  Includes support for various forms of Pagination.  Intent is to treat Firestore as a hierarchical records-oriented database. Originally conceived to port from one database to another.",
  "repository": "LeadDreamer/firebase-wrappers",
  "homepage": "https://github.com/LeadDreamer/firebase-wrapper#readme",
  "bugs": {
    "url": "https://github.com/LeadDreamer/firebase-wrapper/issues",
    "email": "info@dreamsandlogic.com"
  },
  "license": "MIT",
  "author": {
    "name": "Tracy R. Hall, Dreams and Logic",
    "email": "tracy@dreamsandlogic.com",
    "url": "http://dreamsandlogic.com"
  },
  "type": "module",
  "files": ["*.js", "**/dist/*.js", "*.md"],
  "main": "index.js",
  "exports": {
    "import": {
      ".": "./index.js",
      "./FirebaseCloudFunctionsWrapper": "./index.js",
      "./FirebaseCloudFunctionsWrapper/*.js": "./*.js"
    },
    "require": {
      ".": "./dist/index.js",
      "./FirebaseCloudFunctionsWrapper": "./dist/index.js",
      "./FirebaseCloudFunctionsWrapper/*.js": "./dist/*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "transpile": "babel --root-mode upward *.js --out-dir ./dist",
    "build": "$npm_execpath run transpile",
    "rebuild": "$npm_execpath version patch && $npm_execpath run docs && $npm_execpath run build",
    "docs": "./node_modules/.bin/jsdoc2md -c ../jsdoc.conf.json --template ../README.hbs -f index.js > README.md"
  },
  "peerDependencies": {
    "firebase-admin": "^9.4.1"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.7",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-transform-runtime": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "jsdoc-to-markdown": "7.1.1",
    "rimraf": "^3.0.2"
  },
  "keywords": [
    "firebase",
    "firestore",
    "firebase firestore",
    "auth",
    "firebase auth",
    "functions",
    "firebase functions",
    "cloud functions",
    "firebase cloud functions",
    "Cloud Functions",
    "Firebase Cloud Functions",
    "CloudFunctions",
    "Firebase CloudFunctions",
    "storage",
    "firebase storage",
    "firebase wrapper",
    "firestore wrapper"
  ]
}
