{
  "name": "@leaddreamer/firebase-wrapper",
  "engines": {
    "node": ">=22"
  },
  "version": "2.0.4",
  "description": "A set of helper-wrapper functions around firebase firestore.  Includes support for various forms of Pagination.  Intent is to treat Firestore as a hierarchical records-oriented database.  Also has AdminSDK wrapper. now up to Modular Compatible mode",
  "repository": "LeadDreamer/firebase-wrappers",
  "homepage": "https://github.com/LeadDreamer/firebase-wrapper#readme",
  "bugs": {
    "url": "https://github.com/LeadDreamer/firebase-wrapper/issues",
    "email": "info@dreamsandlogic.com"
  },
  "license": "MIT",
  "author": {
    "name": "Tracy R. Hall, Dreams and Logic",
    "email": "tracy@dreamsandlogic.com",
    "url": "http://dreamsandlogic.com"
  },
  "type": "module",
  "files": [
    "*.js",
    "**/dist/*.js",
    "*.md"
  ],
  "source": "index.js",
  "main": "dist/index.js",
  "module": "dist/module.js",
  "scripts": {
    "prebuild": "rm -rf node_modules && $npm_execpath install",
    "build": "parcel build",
    "rebuild": "$npm_execpath version patch && $npm_execpath run docs && $npm_execpath run build",
    "docs": "jsdoc2md -c ../jsdoc.conf.json --template ../README.hbs -f index.js > README.md"
  },
  "peerDependencies": {
    "firebase-admin": "13.4.0",
    "firebase": "11.10.0",
    "uuid": "^8.3.2"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "parcel": "latest",
    "jsdoc-to-markdown": "9.1.1"
  },
  "keywords": [
    "firebase",
    "firestore",
    "firebase firestore",
    "auth",
    "firebase auth",
    "functions",
    "firebase functions",
    "cloud functions",
    "firebase cloud functions",
    "Cloud Functions",
    "Firebase Cloud Functions",
    "CloudFunctions",
    "Firebase CloudFunctions",
    "storage",
    "firebase storage",
    "firebase wrapper",
    "firestore wrapper"
  ]
}
