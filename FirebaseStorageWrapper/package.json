{
  "type": "module",
  "version": "1.0.16",
  "description": "A set of helper-wrapper functions around firebase firestore.  Includes support for various forms of Pagination.  Intent is to treat Firestore as a hierarchical records-oriented database.  Also has AdminSDK wrapper",
  "repository": "LeadDreamer/firebase-wrappers",
  "homepage": "https://github.com/LeadDreamer/firebase-wrapper#readme",
  "bugs": {
    "url": "https://github.com/LeadDreamer/firebase-wrapper/issues",
    "email": "info@dreamsandlogic.com"
  },
  "license": "MIT",
  "author": {
    "name": "Tracy R. Hall, Dreams and Logic",
    "email": "tracy@dreamsandlogic.com",
    "url": "http://dreamsandlogic.com"
  },
  "files": ["*.*js", "*.md"],
  "main": "index",
  "browser": "index.mjs",
  "scripts": {
    "transpile": "babel --root-mode upward ./*.mjs --out-dir .",
    "build": "npm run transpile",
    "prepublishOnly": "yarn run transpile",
    "docs": "./node_modules/.bin/jsdoc2md -c ../jsdoc.conf.json --template ../README.hbs -f index.mjs > README.md",
    "rebuild": "npm version patch && npm run docs && npm run build"
  },
  "peerDependencies": {
    "firebase-admin": "^9.4.1",
    "firebase": "^8.4.3"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "jsdoc-to-markdown": "^7.0.1",
    "rimraf": "^3.0.2"
  },
  "keywords": [
    "firebase",
    "firestore",
    "firebase firestore",
    "auth",
    "firebase auth",
    "functions",
    "firebase functions",
    "cloud functions",
    "firebase cloud functions",
    "Cloud Functions",
    "Firebase Cloud Functions",
    "CloudFunctions",
    "Firebase CloudFunctions",
    "storage",
    "firebase storage",
    "firebase wrapper",
    "firestore wrapper"
  ]
}
